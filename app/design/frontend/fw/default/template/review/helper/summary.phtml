<?php if ($this->getReviewsCount()): ?>
    <div class="ratings">
        <?php if ($this->getRatingSummary()):?>
			<?php $rating = $this->getRatingSummary(); ?>
			<?php $rounded_rating = (10 * round($rating / 10)); // Round rating to nearest multiple of 0.5 ?>
            <div class="rating-box">
                <div class="rating" style="width:<?php echo $rounded_rating ?>%"></div>
            </div>
        <?php endif;?>
        <p class="rating-links">
			<?php echo (($rounded_rating / 100) * 5) . '/5.0' // Convert rating to N out of 5 ?>
            <span class="separator">-</span>
            <?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?>
        </p>
        <div class="all-reviews">
            <a class="review-button" href="#customer-reviews">See All <?php echo $this->__('<span>%d</span>', $this->getReviewsCount()) ?> Reviews</a>
            <br />
            <a href="#review-form">Add Your Review</a>
        </div>
    </div>
<?php elseif ($this->getDisplayIfEmpty()): ?>

<?php endif; ?>
